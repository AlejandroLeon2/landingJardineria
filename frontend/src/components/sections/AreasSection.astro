---
import ItemAreas from "../ui/ItemAreas.astro";
import TitleComponent from "../dynamic/TitleComponent.astro";
const { data } = Astro.props;
---

<section id="areas" class="py-16 bg-gradient-to-t from-stone-900 via-beige bg-beige text-black overflow-hidden">
  <TitleComponent palabra1="Areas de" palabra2="Servicio" />

  <div
    class="flex flex-col max-w-400 md:flex-row items-center justify-center mx-auto gap-2 "
  >
    <ul class="grid grid-cols-2 md:grid-cols-1 gap-6 p-6">
      {data.territorio.map((item) => <ItemAreas data={item} />)}
    </ul>

    <iframe
      class="rounded-[24px] px-5 w-full"
      src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14386.484825770856!2d-76.92102650205848!3d-12.083400147669739!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1ses-419!2spe!4v1748627102871!5m2!1ses-419!2spe"
      width="400"
      height="400"
      style="border:0;"
      allowfullscreen=""
      title="Areas del servicio"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
</section>
