---
const { data } = Astro.props;
---

<article
  class="col-span-1 sm:col-span-2 row-span-2 rounded-xl overflow-hidden relative"
  aria-labelledby="jardin-moderno-title"
>
  <figure>
    <img
      src={data.trabajoDestacado.imagen.link}
      alt={data.trabajoDestacado.imagen.nombre}
      title={data.trabajoDestacado.imagen.title}
      aria-label={data.trabajoDestacado.imagen.arialabel}
      class="w-full h-[605px] md:h-[605px] object-cover"
    />
    <figcaption
      class="bg-stone-900/30 absolute inset-0 flex flex-col justify-end p-5 md:p-8"
    >
      <h2
        id="jardin-moderno-title"
        class="text-white text-xl md:text-2xl font-['Playfair_Display'] font-bold"
      >
        {data.trabajoDestacado.nombre}
      </h2>
      <p class="text-stone-100 mt-2">
        {data.trabajoDestacado.descripcion}
      </p>
      <a
        href={data.trabajoDestacado.enlace.link}
        class="mt-3 text-neonGreen hover:text-dorado text-sm flex items-center"
        title={data.trabajoDestacado.enlace.tittle}
        aria-label={data.trabajoDestacado.enlace.arialabel}
      >
        {data.trabajoDestacado.enlace.nombre}
        <svg
          class="ml-2 w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </figcaption>
  </figure>
</article>
