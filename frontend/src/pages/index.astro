    <section id="areas" class="py-16 bg-emerald-600 text-white">
      <div class="container mx-auto px-6">
        <div>
          <h2
            class="text-4xl font-['Playfair_Display'] font-bold text-center mb-3"
          >
            <span class="">Áreas de Servicio</span>
