    <section id="servicios" class="py-24">
      <div class="container mx-auto px-6">
        <div>
          <h2
            class="text-4xl font-['Playfair_Display'] font-bold text-center mb-3 text-stone-800"
          >
            Nuestros <span class="text-emerald-700">Servicios</span>
          </h2>
          <div class="w-[200px] mx-auto mb-12 h-1 bg-emerald-300"></div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div
            class="bg-white p-8 md:p-4 lg:p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out hover:scale-105 border-2 border-emerald-50"
          >
            <h3 class="text-2xl font-bold mb-4">Mantenimiento de Jardín</h3>
            <ul class="text-stone-600 space-y-2">
              <li>
                <i class="fas fa-check text-emerald-500 mr-2"></i>Podas
                profesionales
              </li>
              <li>
                <i class="fas fa-check text-emerald-500 mr-2"></i>Fertilización
                programada
              </li>
              <li>
                <i class="fas fa-check text-emerald-500 mr-2"></i>Control de
                plagas
              </li>
            </ul>
            <button
              class="mt-4 text-emerald-600 hover:text-emerald-800 flex items-center"
            >
              Más info <i class="fas fa-arrow-right ml-2"></i>
            </button>
          </div>

          <div
            class="bg-white p-8 md:p-4 lg:p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out hover:scale-105"
          >
            <h3 class="text-2xl font-bold mb-4">Personalizacion & Siembra</h3>
            <ul class="text-stone-600 space-y-2">
              <li>
