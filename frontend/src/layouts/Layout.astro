---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import { Jardinero } from "../data/Jardinero";
---

<!doctype html>
<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/public/logo-jardineriaPedro.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jardinería Pedro ofrece servicios de jardinería profesional en La Molina. Con más de 10 años de experiencia, transformamos espacios verdes con diseño, mantenimiento y asesoría experta."
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&family=Playfair+Display:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>Jardinería Pedro - Servicios Profesionales</title>
  </head>
  <body class="">
    <Header />
    <slot />
    <Footer data={Jardinero} />
  </body>
</html>
